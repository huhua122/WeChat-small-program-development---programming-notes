/* pages/studynote/index/index.wxss */
.memo{
  width: 100%;
  padding-bottom: 5rem;
  overflow-x:hidden;
}

.head{
  font-size: 1rem;
  text-align: center;
  height: 4rem;
  line-height:4rem;
  border-bottom: 1rpx solid #ddd;
  padding: 0 30rpx;
}

.head .left{
  float: left;
}

.head .right{
  float: right;
}

.head .iconfont{
  font-size: 1.4rem;
  margin-right: 0.2rem;
}

.head span, .head text{
  display: inline-block;
  vertical-align: middle;
}

.head .logo{
  display: inline-block;
  background-position-x: left;
  background-position-y: center;
  background-repeat: no-repeat;
  text-indent: 2rem;
  background-image: url(images/logo.png);
  background-size: 1.4rem;
}

.head .has-text{
  display: none
}

.head .icon-option{
  color: #e43e2d;
}

.head .icon-edit{
  color: #e43e2d;
}

.head .icon-info{
  font-size:1rem;
  margin-left:.2rem;
  color: #666;
}

.head .uncheck{
  display: none;
}

.head .checkAll{
  display: block;
}

.head .icon-del{
  font-size: 1rem;
  color: #e43e2d;
  display: inline-block;
  vertical-align: middle;
}

.head .memo-del{
  font-size: 1rem;
}

.lists{
  width: 93%;
  padding: 0 30rpx;
  overflow: hidden;
}

.lists label{
  width: 100%;
  display: block;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #ddd;
  line-height: 1.8rem;
  overflow: hidden;
}


.lists label:last-child{
  border: 0;
}

.lists label text{
  white-space: pre-wrap;
  word-break: break-all;
  width: 100%;
  display: inline-block;
}

.memodetail{
  display: inline-block;
  vertical-align: middle;
  width: 82%;
  margin-left: 6rem;
}

.lists label .desc{
  width: 100%;
  max-height: 3.5rem;
  word-break: break-all;
  
}




